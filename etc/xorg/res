!
!  URxvt
!

!URxvt.letterSpace: -1
URxvt.internalBorder: 30

! underline cursor
URxvt.cursorUnderline: 1

! apparently helps with speed
URxvt.skipBuiltinGlyphs: true

! copypasting
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! ctrl-shift thing
URxvt.iso14755: false
URxvt.iso14755_52: false

!  mouse
! consistent selection behavior
URxvt.perl-ext: default,-selection

! clickable links
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! disable the hideous scrollbar
URxvt.scrollBar: false

! dont automatically jump to the bottom when new text appears
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true

! dont try to scroll in apps like less
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

