super + {u,i}
	{copy,emoji}

super + f
	firefox -P main


# power menu
super + h
	pm


# un/mount drives
ctrl + alt + {m,u}
	{_,u}mnt


# send a notif of the time and battery
super + t
	datew

# change theme
ctrl + alt + s
	ts.sh

# mousebind
{XF86Launch6,super + k}
	shade picker

#super + shift + 2
#	pgrep mumble && hw 2

super + shift + 1
	pgrep -f 'st.* -c taskman' && hw 1

super + shift + 4
	pgrep -x 'keepassxc' && hw 4

super + shift + {0,2,3,5-9}
	hw {0,2,3,5-9}


#
#   screenshots
#
Scroll_Lock
	scr -G$(6r f -f)  "$HOME/tmp/dlh/$(date +%s).png"

{Print,ctrl alt w}
	scr -G$(6r f -f)

# selection
{shift + Print, XF86Tools}
	freeze & scr -S; pkill freeze
	#scr -S

super + {Insert, Home, Next, Prior, End}
	scr {_,-c -pwnd -b12,-c -e -b6,-c -pro -a -r60 -b12,-s}


#
#   media
#
XF86Audio{Prev,Next,Play,Stop,Mute}
	vol {prev, next, p, stop, m}

XF86Audio{Raise,Lower}Volume
	vol {up,down}

shift + XF86Audio{Raise,Lower}Volume
	vol {up,down} 1

super + {p, Tab}
	vol {p, mw}


#
#   laptop
#
ctrl + alt + t
	synclient TouchpadOff={0,1}



super + shift + grave
	setxkbmap {us dvorak-l; sleep 0.2; xkbset sticky -twokey -latchlock; xkbset exp 1 =sticky,us; xkbset -sticky}
