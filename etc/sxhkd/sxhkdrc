super + b
	surphace

super + space
	launch

super + y
	keepassxc

{XF86Launch5,super BackSpace}
	mic toggle

button9
	mic on

@button9
	mic off

ctrl + shift + 1
	mic on

ctrl + shift + 2
	mic off

